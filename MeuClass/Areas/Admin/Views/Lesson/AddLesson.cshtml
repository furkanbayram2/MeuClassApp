<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>

                    DERS EKLEME
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li>
                                <a href="javascript:void(0);">Action</a>
                            </li>
                            <li>
                                <a href="javascript:void(0);">Another action</a>
                            </li>
                            <li>
                                <a href="javascript:void(0);">Something else here</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                @using (Html.BeginForm("AddLesson", "Lesson", FormMethod.Post, new { @class = "adminAddLessonForm form-horizontal" })) {
                <div class="row clearfix">
                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                        <label for="lessonName">Ders Adı:</label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                        <div class="form-group">
                            <div class="form-line">
                                <input type="text" id="lessonName" class="form-control" placeholder="Ders Adını Giriniz">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                        <label for="lessonCode">Ders Kodu:</label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                        <div class="form-group">
                            <div class="form-line">
                                <input type="text" id="lessonCode" class="form-control" placeholder="Ders Kodunu Giriniz">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                        <label for="personnelName">Görevli Adı:</label>
                    </div>
                    <div class="col-sm-10">
                        <select class="form-control show-tick" id="personnelName">
                            <option value="">-- Lütfen görevli seçiniz--</option>
                            <option value="10">Yrd. Doç. Evrim Ersin Kangal</option>
                            <option value="20">Yrd. Doç. Hürol Aslan</option>
                            <option value="30">Okutman Jale Bektaş</option>
                            <option value="40">Prof. Dr. Cemile Çelik</option>
                        </select>
                    </div>

                </div>

                <div class="row clearfix">
                    <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-4 col-xs-offset-5">
                        <button type="button" class="btn btn-primary m-t-15 waves-effect">Ders Ekle</button>
                    </div>
                </div>
                }

            </div>
        </div>
    </div>
</div>