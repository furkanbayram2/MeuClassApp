@model MeuClass.Business.ResultData.ResultData<List<MeuClass.Data.User>>

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>

                    DERS EKLEME
                </h2>
            </div>
            <div class="body">
                @using (Html.BeginForm("Add", "AdminLesson", new { area = "Admin" }, FormMethod.Post, new { @class = "adminAddLessonForm form-horizontal" }))
                {
                    <div class="row clearfix">
                        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                            <label for="lessonName">Ders Adı:</label>
                        </div>
                        <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" id="lessonName" name="lessonName" class="form-control" placeholder="Ders Adını Giriniz">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                            <label for="lessonCode">Ders Kodu:</label>
                        </div>
                        <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" id="lessonCode" name="lessonCode" class="form-control" placeholder="Ders Kodunu Giriniz">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                            <label for="personnelName">Görevli Adı:</label>
                        </div>
                        <div class="col-sm-10">
                            <select class="form-control show-tick" id="personnelName" name="personnelName">

                                @if (Model.Success == true)
                                {

                                    if (Model.Data.Count > 0)
                                    {
                                        foreach (var user in Model.Data)
                                        {
                                            <option value="@user.UserID">@user.Name @user.Surname</option>
                                        }
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-4 col-xs-offset-5">
                            <button type="submit" class="btn btn-primary m-t-15 waves-effect">Ders Ekle</button>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>