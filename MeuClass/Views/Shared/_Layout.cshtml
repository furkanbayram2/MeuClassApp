        <div id="leftmenu-container">
            <ul class="nav myNav">

                <li>
                    <a href="http://localhost:55007/">
                        <i class="fa fa-home fa-2x" aria-hidden="true"></i> Anasayfa </i>
                    </a>
                </li>
                <li>
                    <a href="http://localhost:55007/User/Profile">
